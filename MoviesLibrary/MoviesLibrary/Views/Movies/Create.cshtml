@model MoviesLibrary.Models.MovieFormViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create</h2>
@using (Html.BeginForm("Create", "Movies"))
{
    <div class="form-group">
        @Html.ValidationMessageFor(m => m.Name)
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.ValidationMessageFor(m => m.Genre)
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"), "-- Select --", new { @class = "form-control text-dark" })

    </div>

    <div class="container">
        <div class="row">
            <div class='col-md-12'>
                <div class="form-group">
                    <span col-sm-6> @Html.Label("Date of Birth", htmlAttributes: new { @class = "control-label col-md-2" })</span>
                    <div class='input-group date col-sm-3' id='datetimepicker1'>

                        @Html.EditorFor(model => model.Watched, new { htmlAttributes = new { @class = "form-control" } })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>

                        @Html.ValidationMessageFor(model => model.Watched, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary ">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
